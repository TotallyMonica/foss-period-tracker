package tech.monicarose.foss_period_tracker.date;

import java.util.Calendar;
import java.util.Date;
import java.util.GregorianCalendar;

public class CurrentPeriod extends GregorianCalendar {
	private Date _start;
	private Calendar _next;
	private int _offset;
	private Calendar _clndr = Calendar.getInstance();
	
	public void SetOffset(int diff) {
		_offset = diff;
	}
	
	public void StartNow() {
		_start = _clndr.getTime(); 
	}
	
	public void SetNext() {
		SetNext(_offset);
	}
}
