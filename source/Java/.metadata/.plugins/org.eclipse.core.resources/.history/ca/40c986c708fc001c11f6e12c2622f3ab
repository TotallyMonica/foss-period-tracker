package tech.monicarose.foss_period_tracker.date;

import java.util.Calendar;
import java.util.Date;
import java.util.GregorianCalendar;

public class CurrentPeriod extends GregorianCalendar {
	private Date _start;
	private Calendar _next;
	private int _offset;
	
	public void SetOffset(int diff) {
		_offset = diff;
	}
	
	public void StartNow() {
		Calendar calendar = Calendar.getInstance();
		_start = calendar.getTime(); 
	}
	
	public void SetNext() {
		SetNext(_offset);
	}
	
	public void SetNext(int time) {
		(Calendar.MINUTE, int minutes);
	}
	
	public Date NextPeriod() {
		return _next;
	}
}
